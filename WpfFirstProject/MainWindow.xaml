<Window x:Class="WpfFirstProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Счетчик кликов" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid x:Name="MainWindowGrid" Margin="20,10,20,20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Заголовок -->

            <!-- Отображение счетчика -->

            <TextBlock x:Name="textBlock" Text="Счетчик кликов" 
                       FontSize="24" 
                       FontWeight="Bold"
                       />

            <!-- Кнопка для кликов -->
            <Button Content="{Binding ButtonText}"
                    Command="{Binding ClickCommand}"
                    FontSize="16"
                    Padding="20,10"
                    Margin="0,0,0,10"
                    Background="LightBlue"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Кнопка сброса -->
            <Button Content="Сбросить счетчик"
                    Command="{Binding ResetCommand}"
                    FontSize="14"
                    Padding="15,5"
                    Background="LightCoral"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"></Setter>
                    </Style>
                </Button.Resources>
            </Button>
            <!-- Дополнительная информация -->
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Статистика:" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>

                <TextBlock>
                    <Run Text="Текущее значение:"/>
                    <Run Text="{Binding CountClicks}" 
                         FontWeight="Bold" 
                         Foreground="Blue"/>
                </TextBlock>
            </StackPanel>
        </StackPanel>
        <Button Content="Button" HorizontalAlignment="Left" Margin="466,190,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>