<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WpfFirstProject.MainWindow"
        Title="Счетчик кликов" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid x:Name="mainWindowGrid" Margin="20,10,20,20" Background="#FFEB7A7A" OpacityMask="#FF8A6F6F">
        <StackPanel x:Name="stackPanel" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Заголовок -->

            <!-- Отображение счетчика -->

            <TextBlock x:Name="textBlock" Text="Счетчик кликов" 
                       FontSize="24" 
                       FontWeight="Bold"
                       />

            <!-- Кнопка для кликов -->
            <Button Content="{Binding ButtonText}"
                    Command="{Binding ClickCommand}"
                    FontSize="16"
                    Padding="20,10"
                    Margin="0,0,0,10"
                    Background="LightBlue"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Кнопка сброса -->
            <Button Content="Сбросить счетчик"
                    Command="{Binding ResetCommand}"
                    FontSize="14"
                    Padding="15,5"
                    Background="LightCoral"
                    Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <!-- Дополнительная информация -->
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Статистика:" 
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>

                <TextBlock><Run Text="Текущее значение:"/><Run Text=" "/><Run Text="{Binding CountClicks}" 
                         FontWeight="Bold" 
                         Foreground="Blue"/></TextBlock>
                <ListBox ItemsSource="{Binding Users}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Name}" 
                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding Email}" 
                           Foreground="Gray"/>
                                <TextBlock Text="{Binding Status}" 
                           Foreground="Blue"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </StackPanel>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Center" Height="29" Margin="0,388,0,0" VerticalAlignment="Top" Width="330" Value="-7"/>
    </Grid>
</Window>